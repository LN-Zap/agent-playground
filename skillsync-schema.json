{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skills Sync Configuration",
  "description": "Configuration for synchronizing skills across multiple AI agents",
  "type": "object",
  "required": ["agents", "skills"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "agents": {
      "type": "array",
      "description": "List of AI agents to target for skill installation",
      "items": {
        "type": "string",
        "examples": [
          "github-copilot",
          "gemini-cli",
          "antigravity",
          "codex",
          "claude-code",
          "opencode"
        ]
      },
      "minItems": 1
    },
    "skills": {
      "type": "array",
      "description": "List of skills to install from various sources",
      "items": {
        "type": "object",
        "required": ["source"],
        "properties": {
          "source": {
            "type": "string",
            "description": "GitHub repository in the format 'org/repo-name'",
            "pattern": "^[^/]+/[^/]+$",
            "examples": [
              "LN-Zap/zap-skills",
              "anthropics/skills",
              "openai/skills"
            ]
          },
          "skills": {
            "type": "array",
            "description": "Specific skills to install. If omitted, all skills from the source are installed.",
            "items": {
              "type": "string"
            },
            "minItems": 1
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "additionalProperties": false
}
